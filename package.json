{
  "name": "hub-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/app.ts",
    "dev:docker": "./start.sh",
    "build": "bun build --target=bun src/app.ts --outdir=dist",
    "start": "bun run dist/app.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "migrate": "drizzle-kit migrate",
    "generate": "drizzle-kit generate",
    "seed": "bun run src/db/seed.ts",
    "test": "bun test",
    "db:studio": "drizzle-kit studio",
    "type-check": "bun run tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "argon2": "^0.44.0",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "elysia": "^1.4.9",
    "ioredis": "^5.8.0",
    "nanoid": "^5.1.6",
    "postgres": "^3.4.7",
    "ulid": "^3.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "drizzle-kit": "^0.31.5",
    "vitest": "^3.2.4"
  }
}
